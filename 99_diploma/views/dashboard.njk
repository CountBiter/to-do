{% extends "_layout.njk" %}

{% block style %}
<style>
  .uk-navbar-right :first-child {
    margin-left: auto;
  }
</style>

<link rel="stylesheet" href="https://unpkg.com/easymde/dist/easymde.min.css">
<link rel="stylesheet" href="/bundle.css" />
{% endblock %}

{% block content %}

  <nav class="uk-navbar-container" uk-navbar>
    <div class="uk-navbar-right">
      <div class="uk-navbar-item">
        {%if user.photos%}
          <img id="photos-user" src="{{user.photos}}" width="32" height="32" class="uk-margin-right uk-border-circle"/>

          {{ user.username }}
        {%else%}
          <img src="https://www.gravatar.com/avatar/{{user.username}}?s=32&d=identicon&r=PG" class="uk-margin-right uk-border-circle" />
          {{ user.username }}
        {%endif%}
      </div>
      <ul class="uk-navbar-nav">
        <form method="POST" action="/logout">
           <li><button>Выход</button></li>
        </form>
      </ul>
    </div>
  </nav>

  <div id="main"></div>

  <script src="/bundle.js"></script>
{% endblock %}
